<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/album_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:background="#fff202"
        android:clickable="false"
        android:baselineAlignBottom="true"
        android:layout_alignTop="@id/album_image"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/album_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/album_image"
        android:background="#6aff2c" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/album_author"
        android:background="#ff96a2"
        android:layout_toRightOf="@+id/album_image"
        android:layout_below="@id/album_title"
        />
</RelativeLayout>