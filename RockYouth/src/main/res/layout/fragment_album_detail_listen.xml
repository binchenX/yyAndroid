<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AlbumDetailActivity$DummySectionFragment">


    <include layout="@layout/cover_with_title" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/id_cover_with_title"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/current_song"
            android:id="@+id/frag_listen_current_song"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginBottom="40dp"/>

        <include layout="@layout/player_controller" />

    </RelativeLayout>

</RelativeLayout>
