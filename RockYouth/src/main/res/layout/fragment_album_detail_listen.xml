<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AlbumDetailActivity$DummySectionFragment">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/album_cover_big">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/frag_listen_album_cover_big"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
             />

        <TextView
            android:text="专辑名称"
            android:id="@+id/frag_listen_album_title"
            android:layout_gravity="center_vertical|bottom"
            android:enabled="false"
            style="@style/album_cover_title_overlay"
        />
    </FrameLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/album_cover_big"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="这是一个恋爱的季节"
            android:id="@+id/frag_listen_current_song"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginBottom="40dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_below="@id/frag_listen_current_song"
            android:id="@+id/play_controller"
            android:layout_marginBottom="20dp"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previous"
                android:src="@drawable/ic_previous" />


             <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/play"
                android:layout_toRightOf="@id/previous"
                 android:src="@drawable/ic_play" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next"
                android:layout_toRightOf="@id/play"
                android:src="@drawable/ic_next" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
